    "version": "0.2.0",
    "configurations": [
        {
            "name": "neanno.py (dev)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/neanno.py",
            "args": [
                "--dataset_source_csv", "sample_data/sample_data.annotated.csv",
                "--dataset_target_csv", "sample_data/sample_data.annotated.csv",
                "--text_column_name", "text",
                "--is_annotated_column_name", "is_text_annotated",
                "--named_entity_defs", "ANIMAL Alt+A",
                "--ner_model_source", "en",
                "--ner_model_target", "models/en_animals"
            ]
        },
        {
            "name": "neanno.py (prod)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/neanno.py",
            "args": [
                "--dataset_source_csv", "sample_data/sample_posts.annotated.csv",
                "--dataset_target_csv", "sample_data/sample_posts.annotated.csv",
                "--text_column_name", "post_text",
                "--is_annotated_column_name", "is_post_annotated",
                "--named_entity_defs", "MEAL Alt+M/SIDE Alt+S/APPETIZER Alt+A/DESSERT Alt+D/BEVERAGE Alt+B",
                "--ner_model_source", "blank:de",
                //"--ner_model_target", "de_meals"
            ]
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}"
        }
    ]
}